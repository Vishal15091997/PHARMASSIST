<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:gravity="center"
    tools:context="com.example.pallabi.pharmiz.DetailsActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-30dp"
        android:gravity="center"
        android:textColor="@color/colorPrimaryDark"
        android:text="NAME"
        android:textAlignment="center"
        android:textSize="35sp"
        android:textStyle="bold|italic"
        android:id="@+id/textView" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_marginEnd="22dp"
        android:layout_marginTop="63dp"
        android:layout_toStartOf="@+id/textView"
        android:textColor="@color/red"
        android:text="PRICE"
        android:textSize="18dp"
        android:layout_marginRight="22dp"
        android:layout_toLeftOf="@+id/textView" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView2"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="30dp"
        android:textSize="18dp"

        android:textColor="@color/red"
        android:text="Quantity In Stock"
        android:layout_alignLeft="@+id/textView2" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView3"
        android:layout_below="@+id/textView3"
        android:textSize="18dp"
        android:textColor="@color/red"
        android:layout_marginTop="38dp"
        android:text="Supplier's contact"
        android:layout_alignLeft="@+id/textView3" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView2"
        android:layout_alignBottom="@+id/textView2"
        android:layout_marginStart="36dp"
        android:layout_toEndOf="@+id/textView6"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20dp"

        android:singleLine="true"
        android:hint="Price from Database"
        android:layout_toRightOf="@+id/textView6"
        android:layout_marginLeft="36dp" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView3"
        android:layout_alignStart="@+id/textView7"
        android:hint="Quantity from database"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView8"
        android:textSize="20dp"
        android:layout_alignTop="@+id/textView6"
        android:hint="Email from database"
        android:layout_alignLeft="@+id/textView8" />


</RelativeLayout>
